generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id              String         @id @default(uuid())
  name            String         @unique
  crmProvider     String
  storageProvider String
  email           String         @unique
  apiKeys         TenantApiKey[]
}

model TenantApiKey {
  id        String   @id @default(uuid())
  tenantId  String
  apiKey    String
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id])
}

model Document {
  id           String                @id @default(uuid())
  doc_key      String                @unique // Unique identifier for the document
  translations DocumentTranslation[]
}

model DocumentTranslation {
  id         String   @id @default(uuid())
  language   String // Example: "en", "pt"
  value      String // Translated value
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([documentId, language]) // Ensure a document has only one translation per language
}
